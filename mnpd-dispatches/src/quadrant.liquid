<div class="view">
  <div class="layout layout--row">
    <div class="column">
      <table
        class="table table--condensed"
        id="dispatch-table"
        style="width:100%">
        <thead>
          <tr>
            <th>
              <span class="label">Description</span>
            </th>
            <th style="width:20%">
              <span class="label">Time</span>
            </th>
            <th>
              <span class="label">Location</span>
            </th>
          </tr>
        </thead>
        <tbody id="dispatch-tbody">
          {% for row in features, limit: 6 %}
          <tr>
            <td><span class="description">{{ row.properties.IncidentTypeName }}</span></td>
            <td><span class="label label--small text--center">{{ row.properties.CallReceivedTime | date: '%l:%M %p' }}</span></td>
            <td><span class="label label--small">{{ row.properties.Location }}</span></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
